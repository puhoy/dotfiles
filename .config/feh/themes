feh --scale-down \
    --image-bg black \
    --sort name \
    --no-menus \
    --auto-rotate \
    --conversion-timeout -1 \
    --force-aliasing \
    --draw-filename \
    --sort mtime \
    --title "[%u/%l] %n (%wx%h)" \
    --action1 ";[import]echo 'import %F' && cp %F ~/notes/images/`date +%%Y%%m%%d`_%N"

thumbs --sort name \
       --image-bg black \
       --thumbnails \
       --thumb-width 320 \
       --thumb-height 240 \
       --limit-width 1700 \
        --auto-rotate \
       --action "feh --theme feh %F"

